                                            <Binding Path="AppState.ActiveTorrentCount" FallbackValue="" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </TreeViewItem.Header>
                    </TreeViewItem>

