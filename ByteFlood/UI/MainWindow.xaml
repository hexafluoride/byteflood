                    <RowDefinition MaxHeight="35" Height="35"/>
                    <RowDefinition Name="torrent_list_row" Height="250"/>
                    <RowDefinition Name="info_tabs_row" Height="200"/>
                </Grid.RowDefinitions>

                <StackPanel Name="toolbar"
                            Grid.Row="0"
                            Margin="5"
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

