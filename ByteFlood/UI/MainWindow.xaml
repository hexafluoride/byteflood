                                    </Path>
                                </Canvas>
                            </Viewbox>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1})">
                                        <Binding Path="Language.TreeList_Feeds" FallbackValue="Feeds"/>
                                        <Binding Path="ItemsSource.Count" ElementName="feeds_tree_item" FallbackValue="" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </TreeViewItem.Header>
                    <TreeViewItem.Resources>
                        <ContextMenu x:Key="RssItemContextMenu">
                            <MenuItem Header="{Binding Language.FeedsItemsContextMenu_Refresh, FallbackValue=Refresh}"
                                      Tag="Refresh" Click="OperationOnRssItem" CommandParameter="{Binding}" />

                            <MenuItem Header="{Binding Language.FeedsItemsContextMenu_Remove, FallbackValue=Remove}" 
                                      Tag="Remove" CommandParameter="{Binding}" Click="OperationOnRssItem" />

                            <MenuItem Header="{Binding Language.FeedsItemsContextMenu_Edit, FallbackValue=Edit}" 
                                      Tag="Edit" CommandParameter="{Binding}" Click="OperationOnRssItem" />

                            <MenuItem Header="{Binding Language.FeedsItemsContextMenu_ViewFeeds, FallbackValue=ViewFeeds}" 
                                      Tag="View" CommandParameter="{Binding}" Click="OperationOnRssItem" />
                        </ContextMenu>
                    </TreeViewItem.Resources>
                    <TreeViewItem.ItemTemplate>
                        <HierarchicalDataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Icon}"/>
                                <TextBlock Margin="0,0,8,0" Tag="{Binding}" ContextMenu="{StaticResource RssItemContextMenu}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1})">
                                            <Binding Path="Name"/>
                                            <Binding Path="Count"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeViewItem.ItemTemplate>
                </TreeViewItem>
            </TreeView>

